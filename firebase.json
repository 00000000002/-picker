{
  "hosting": {
    "public": "dist",
    "headers": [
      {
        "source": "**/*.@(js|css|woff2|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors 'none'; script-src 'self'; style-src 'self'; font-src 'self'; worker-src 'self'; child-src 'self';"
          }
        ]
      }
    ]
  }
}
