{
  "hosting": {
    "public": "dist",
    "headers": [
      {
        "source": "**/*.@(js.css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'none'; img-src 'self'; script-src 'self'; style-src 'self'; font-src 'self';"
          }
        ]
      }
    ]
  }
}
